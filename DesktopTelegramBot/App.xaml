<Application x:Class="DesktopTelegramBot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown">

	<Application.Resources>
		<ResourceDictionary>

			<BitmapImage x:Key="NotificationsOnImage" UriSource="Resources/Images/notifications-on.png"/>
			<BitmapImage x:Key="NotificationsOffImage" UriSource="Resources/Images/notifications-off.png"/>
			<BitmapImage x:Key="SettingsImage" UriSource="Resources/Images/Settings.png"/>
			<BitmapImage x:Key="DefaultImage" UriSource="Resources/Images/DefaultImage.png"/>

			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources\Converters.xaml"/>
				<!--<ResourceDictionary Source="..\Resources\Styles.xaml"/>-->
			</ResourceDictionary.MergedDictionaries>

		</ResourceDictionary>
	</Application.Resources>

</Application>
